{
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "DatabaseConfiguration": {
    "UseInMemoryDatabase": false,
    "ApplyDefaultSeeds": true,
    "DatabaseMigrationsConfiguration": {
      "ApplyDatabaseMigrations": true
    },
    "ConnectionStringsConfiguration": {
      "IdentityDbConnection": "Server=localhost;Port=5432;Database=EiromplaysIdentityServer;User Id=postgres;Password=1234;",
      "ConfigurationDbConnection": "Server=localhost;Port=5432;Database=EiromplaysIdentityServer;User Id=postgres;Password=1234;",
      "PersistedGrantDbConnection": "Server=localhost;Port=5432;Database=EiromplaysIdentityServer;User Id=postgres;Password=1234;",
      "DataProtectionDbConnection": "Server=localhost;Port=5432;Database=EiromplaysIdentityServer;User Id=postgres;Password=1234;",
      "PermissionDbConnection": "Server=localhost;Port=5432;Database=EiromplaysIdentityServer;User Id=postgres;Password=1234;"
    }
  },
  "EmailConfiguration": {
    "Host": "localhost",
    "Login": "{Login}",
    "Password": "{Password}",
    "From": "Eiromplays.IdentityServer",
    "Port": 25,
    "UseSsl": false
  },
  "ExternalProvidersConfiguration": {
    "UseGoogleProvider": false,
    "GoogleClientId": "{GoogleClientId}",
    "GoogleClientSecret": "{GoogleClientSecret}",
    "GoogleCallbackPath": "",
    "UseGitHubProvider": false,
    "GitHubClientId": "{GitHubClientId}",
    "GitHubClientSecret": "{GitHubClientSecret}",
    "GitHubCallbackPath": "",
    "UseDiscordProvider": false,
    "DiscordClientId": "{DiscordClientId}",
    "DiscordClientSecret": "{DiscordClientSecret}",
    "DiscordCallbackPath": "",
    "UseRedditProvider": false,
    "RedditClientId": "{RedditClientId}",
    "RedditClientSecret": "{RedditClientSecret}",
    "RedditCallbackPath": "",
    "UseAmazonProvider": false,
    "AmazonClientId": "{AmazonClientId}",
    "AmazonClientSecret": "{AmazonClientSecret}",
    "AmazonCallbackPath": "",
    "UseTwitchProvider": false,
    "TwitchClientId": "{TwitchClientId}",
    "TwitchClientSecret": "{TwitchClientSecret}",
    "TwitchCallbackPath": "",
    "UsePatreonProvider": false,
    "PatreonClientId": "{PatreonClientId}",
    "PatreonClientSecret": "{PatreonClientSecret}",
    "PatreonCallbackPath": "",
    "UseWordpressProvider": false,
    "WordpressClientId": "{WordpressClientId}",
    "WordpressClientSecret": "{WordpressClientSecret}",
    "WordpressCallbackPath": ""
  },
  "CspTrustedDomains": [
    ""
  ],
  "IdentityOptions": {
    "Password": {
      "RequiredLength": 8
    },
    "User": {
      "RequireUniqueEmail": true
    },
    "SignIn": {
      "RequireConfirmedAccount": true
    }
  },
  "IdentityServerOptions": {
    "KeyManagement": {
      "Enabled": true
    },
    "Events": {
      "RaiseErrorEvents": true,
      "RaiseInformationEvents": true,
      "RaiseFailureEvents": true,
      "RaiseSuccessEvents": true
    }
  }
}
