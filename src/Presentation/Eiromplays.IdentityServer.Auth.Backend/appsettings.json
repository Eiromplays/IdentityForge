{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "DatabaseConfiguration": {
    "UseInMemoryDatabase": false,
    "DatabaseMigrationsConfiguration": {
      "ApplyDatabaseMigrations": false
    },
    "ConnectionStringsConfiguration": {
      "IdentityDbConnection": "Server=localhost;Port=5432;Database=EiromplaysIdentityServer;User Id=postgres;Password=1234;",
      "ConfigurationDbConnection": "Server=localhost;Port=5432;Database=EiromplaysIdentityServer;User Id=postgres;Password=1234;",
      "PersistedGrantDbConnection": "Server=localhost;Port=5432;Database=EiromplaysIdentityServer;User Id=postgres;Password=1234;",
      "DataProtectionDbConnection": "Server=localhost;Port=5432;Database=EiromplaysIdentityServer;User Id=postgres;Password=1234;"
    },
    "EncryptionKeysConfiguration": {
      "IdentityEncryptionKey": "Test1234"
    }
  },
  "IdentityOptions": {
    "Password": {
      "RequiredLength": 8
    },
    "User": {
      "RequireUniqueEmail": true
    },
    "SignIn": {
      "RequireConfirmedAccount": true
    }
  },
  "IdentityServerOptions": {
    "KeyManagement": {
      "Enabled": true
    },
    "Events": {
      "RaiseErrorEvents": true,
      "RaiseInformationEvents": true,
      "RaiseFailureEvents": true,
      "RaiseSuccessEvents": true
    }
  }
}
