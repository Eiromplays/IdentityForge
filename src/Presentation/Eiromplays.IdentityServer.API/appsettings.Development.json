{
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.AspNetCore.Diagnostics.ExceptionHandlerMiddleware": "None"
    }
  },
  "AllowedHosts": "*",
  "DatabaseConfiguration": {
    "DatabaseProvider": "PostgreSql",
    "ApplyDefaultSeeds": false,
    "ApplyDatabaseMigrations": false,
    "ConnectionStringsConfiguration": {
      "ApplicationDbConnection": "Server=localhost;Port=5432;Database=EiromplaysIdentityServer;User Id=postgres;Password=1234;",
      "ConfigurationDbConnection": "Server=localhost;Port=5432;Database=EiromplaysIdentityServer;User Id=postgres;Password=1234;",
      "PersistedGrantDbConnection": "Server=localhost;Port=5432;Database=EiromplaysIdentityServer;User Id=postgres;Password=1234;",
      "DataProtectionDbConnection": "Server=localhost;Port=5432;Database=EiromplaysIdentityServer;User Id=postgres;Password=1234;",
      "TenantDbConnection": "Server=localhost;Port=5432;Database=EiromplaysIdentityServer;User Id=postgres;Password=1234;",
      "SessionDbConnection": "Server=localhost;Database=EiromplaysIdentityServer;User Id=postgres;Password=1234;"
    }
  },
  "EmailConfiguration": {
    "EmailProvider": "Smtp",
    "From": "{yourname@yourdomain.com}",
    "DefaultFromName": "Eiromplays.IdentityServer",
    "SmtpEmailConfiguration": {
      "Host": "{Host}",
      "Login": "{Login/username}",
      "Password": "{Password}",
      "Port": 587,
      "UseSsl": true
    },
    "MailKitConfiguration": {
      "Server": "{Server/Host}",
      "Port": 587,
      "User": "{UserName}",
      "Password": "{Password}",
      "UseSsl": true,
      "RequiresAuthentication": true
    },
    "SendGridConfiguration": {
      "ApiKey": "{Your_API_Key}",
      "SandboxMode": true
    },
    "MailgunConfiguration": {
      "DomainName": "{DomainName}",
      "ApiKey": "{Your_API_Key}",
      "MailGunRegion": "EU"
    },
    "MailtrapConfiguration": {
      "UserName": "{UserName}",
      "Password": "{Password}",
      "Host": "{Host}",
      "Port": 25
    },
    "GraphConfiguration": {
      "ClientId": "{ClientId}",
      "TenantId": "{TenantId}",
      "Secret": "{Secret}",
      "SaveSentItems": true
    }
  },
  "AccountConfiguration": {
    "RegisterConfiguration": {
      "Enabled": true
    },
    "LoginConfiguration": {
      "LoginPolicy": "All"
    },
    "ProfilePictureConfiguration": {
      "Enabled": true,
      "AutoGenerate": true,
      "ProfilePictureUploadType": "File",
      "AllowedFileExtensions": [".jpg", ".jpeg", ".png", ".gif", ".webp"],
      "DefaultUrl": "https://avatars.dicebear.com/api/initials/"
    }
  },
  "CspTrustedDomains": [
    ""
  ],
  "IdentityOptions": {
    "Password": {
      "RequiredLength": 8
    },
    "User": {
      "RequireUniqueEmail": true
    },
    "SignIn": {
      "RequireConfirmedAccount": true
    }
  }
}
