{
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "DatabaseConfiguration": {
    "DatabaseProvider": "PostgreSql",
    "ApplyDefaultSeeds": false,
    "ApplyDatabaseMigrations": false,
    "ConnectionStringsConfiguration": {
      "ApplicationDbConnection": "Server=localhost;Database=EiromplaysIdentityServer;User Id=postgres;Password=1234;",
      "ConfigurationDbConnection": "Server=localhost;Database=EiromplaysIdentityServer;User Id=postgres;Password=1234;",
      "PersistedGrantDbConnection": "Server=localhost;Database=EiromplaysIdentityServer;User Id=postgres;Password=1234;",
      "DataProtectionDbConnection": "Server=localhost;Database=EiromplaysIdentityServer;User Id=postgres;Password=1234;",
      "TenantDbConnection": "Server=localhost;Database=EiromplaysIdentityServer;User Id=postgres;Password=1234;"
    }
  },
  "EmailConfiguration": {
    "EmailProvider": "Smtp",
    "From": "{yourname@yourdomain.com}",
    "DefaultFromName": "Eiromplays.IdentityServer",
    "SmtpEmailConfiguration": {
      "Host": "{Host}",
      "Login": "{Login/username}",
      "Password": "{Password}",
      "Port": 587,
      "UseSsl": true
    },
    "MailKitConfiguration": {
      "Server": "{Server/Host}",
      "Port": 587,
      "User": "{UserName}",
      "Password": "{Password}",
      "UseSsl": true,
      "RequiresAuthentication": true
    },
    "SendGridConfiguration": {
      "ApiKey": "{Your_API_Key}",
      "SandboxMode": true
    },
    "MailgunConfiguration": {
      "DomainName": "{DomainName}",
      "ApiKey": "{Your_API_Key}",
      "MailGunRegion": "EU"
    },
    "MailtrapConfiguration": {
      "UserName": "{UserName}",
      "Password": "{Password}",
      "Host": "{Host}",
      "Port": 25
    },
    "GraphConfiguration": {
      "ClientId": "{ClientId}",
      "TenantId": "{TenantId}",
      "Secret": "{Secret}",
      "SaveSentItems": true
    }
  },
  "ExternalProvidersConfiguration": {
    "UseGoogleProvider": false,
    "GoogleClientId": "{GoogleClientId}",
    "GoogleClientSecret": "{GoogleClientSecret}",
    "GoogleCallbackPath": "",
    "UseGitHubProvider": false,
    "GitHubClientId": "{GitHubClientId}",
    "GitHubClientSecret": "{GitHubClientSecret}",
    "GitHubCallbackPath": "",
    "UseDiscordProvider": false,
    "DiscordClientId": "{DiscordClientId}",
    "DiscordClientSecret": "{DiscordClientSecret}",
    "DiscordCallbackPath": "",
    "UseRedditProvider": false,
    "RedditClientId": "{RedditClientId}",
    "RedditClientSecret": "{RedditClientSecret}",
    "RedditCallbackPath": "",
    "UseAmazonProvider": false,
    "AmazonClientId": "{AmazonClientId}",
    "AmazonClientSecret": "{AmazonClientSecret}",
    "AmazonCallbackPath": "",
    "UseTwitchProvider": false,
    "TwitchClientId": "{TwitchClientId}",
    "TwitchClientSecret": "{TwitchClientSecret}",
    "TwitchCallbackPath": "",
    "UsePatreonProvider": false,
    "PatreonClientId": "{PatreonClientId}",
    "PatreonClientSecret": "{PatreonClientSecret}",
    "PatreonCallbackPath": "",
    "UseWordpressProvider": false,
    "WordpressClientId": "{WordpressClientId}",
    "WordpressClientSecret": "{WordpressClientSecret}",
    "WordpressCallbackPath": ""
  },
  "AccountConfiguration": {
    "RegisterConfiguration": {
      "Enabled": true
    },
    "LoginConfiguration": {
      "LoginPolicy": "All"
    },
    "ProfilePictureConfiguration": {
      "Enabled": true,
      "AutoGenerate": true,
      "ProfilePictureUploadType": "File",
      "AllowedFileExtensions": [
        ".jpg",
        ".jpeg",
        ".png",
        ".gif",
        ".webp"
      ],
      "BaseUrl": "https://localhost:7003/",
      "DefaultUrl": "https://avatars.dicebear.com/api/initials/"
    }
  },
  "CspTrustedDomains": [
    "ws://localhost:57172"
  ],
  "IdentityOptions": {
    "Password": {
      "RequiredLength": 8
    },
    "User": {
      "RequireUniqueEmail": true
    },
    "SignIn": {
      "RequireConfirmedAccount": true
    }
  },
  "IdentityServerOptions": {
    "KeyManagement": {
      "Enabled": true
    },
    "Events": {
      "RaiseErrorEvents": true,
      "RaiseInformationEvents": true,
      "RaiseFailureEvents": true,
      "RaiseSuccessEvents": true
    }
  }
}
